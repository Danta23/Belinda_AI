{
  "services": [
    {
      "name": "flask",
      "dockerfilePath": "Dockerfile.python",
      "envs": {
        "FLASK_PORT": "8000",
        "GROQ_API_KEY": "${{GROQ_API_KEY}}"
      }
    },
    {
      "name": "bridge",
      "dockerfilePath": "Dockerfile.node",
      "envs": {
        "PYTHON_URL": "http://flask:8000",
        "NODE_ENV": "production",
        "GROQ_API_KEY": "${{GROQ_API_KEY}}"
      }
    }
  ]
}
